<h1>Menus</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Menu1</th>
      <th>Menu2</th>
      <th>Date</th>
      <th>Time</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.id %></td>
        <td><%= menu.menu1 %></td>
        <td><%= menu.menu2 %></td>
        <td><%= menu.date %></td>
        <td><%= eat_time_to_s menu.time %></td>
        <td><%= menu.user.name %></td>
        <td><%= link_to 'Show', menu %></td>
        <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
        <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Menu', new_menu_path %>
